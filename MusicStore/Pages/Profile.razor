@page "/Profile"
@using MusicStore.Data

@inject UserService UserService


<body class="BodyProfile">
<div class="wrapper">
    <div class="profile">
        <div class="content">
            <h1>Edit Profile</h1>
            <form action="">
                    <!-- Name -->
                <fieldset>
                    <div class="grid-35">
                        <label for="fname">First Name</label>
                    </div>
                    <div class="grid-65">
                        <input type="text" id="fname" tabindex="1" />
                    </div>
                </fieldset>
                <fieldset>
                    <div class="grid-35">
                        <label for="lname">Last Name</label>
                    </div>
                    <div class="grid-65">
                        <input type="text" id="lname" tabindex="2" />
                    </div>
                </fieldset>
                <!-- Email -->
                <fieldset>
                    <div class="grid-35">
                        <label for="email">Email Address: @Email</label>
                    </div>
                    <div class="grid-65">
                        <input type="email" id="email" tabindex="6" />
                    </div>
                </fieldset>

            </form>
        </div>
</div>
</div>
</body>
@code {
    private string FullName { get; set; } = string.Empty;
    private string Email { get; set; } = string.Empty;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        if (UserService.User?.FullName != null) FullName = UserService.User?.FullName;
        if (UserService.User?.Email != null) Email = UserService.User?.Email;
    }

}
